

<% if @uploads %>
<table class="table" border = "1">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">AWS Link</th>
      <th scope="col">Added by</th>
      <th scope="col">Dumped in DB</th>
      <th scope="col">Uploaded to S3?</th>
    </tr>
  </thead>
  <tbody>
<% @uploads.each do |upload| %>
  <tr>
      <td><%= upload[0] %></td>
      <td><%= link_to upload[3], upload[4] %></td>
      <td><% if(!upload[5].blank?) %>
        <%= upload[5] %>
        <% else %>
        <%= upload[6] %>
        <% end %>
        </td>
      <td><% if(upload[1] == 0) %>Not completed <% elsif(upload[1] == 1) %> Completed <% else %> In progress <% end %></td>
      <td><% if upload[2] %> Uploaded  <%= link_to 'Download File', download_path(:id => upload[0]) %><% else %> Not Uploaded <% end %></td>
    </tr>
<% end %>

</tbody></table>
<% else %>
<div> No Uploads yet </div>
<% end %>
